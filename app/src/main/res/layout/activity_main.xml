<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current GPA"
        android:id="@+id/textView"
        android:textSize="24dp"
        android:layout_alignTop="@+id/curGPA"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desired Rank"
        android:id="@+id/textView2"
        android:layout_marginRight="4000dp"
        android:layout_below="@+id/curGPA"
        android:layout_alignParentStart="true"
        android:textSize="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have been in school for"
        android:id="@+id/textView3"
        android:layout_below="@+id/desRank"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/btn"
        android:longClickable="false"
        android:clickable="true"
        android:onClick="onPress"
        android:layout_below="@+id/semLeft"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="83dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/curGPA"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/desRank"
        android:layout_below="@+id/curGPA"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I would like to get this GPA in"
        android:id="@+id/das"
        android:layout_below="@+id/semDone"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/semDone"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/semLeft"
        android:layout_below="@+id/das"
        android:layout_alignStart="@+id/semDone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="semesters"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/semDone"
        android:layout_alignBottom="@+id/semDone"
        android:layout_toEndOf="@+id/semDone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="semesters"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/semLeft"
        android:layout_alignBottom="@+id/semLeft"
        android:layout_toEndOf="@+id/semLeft" />

</RelativeLayout>
